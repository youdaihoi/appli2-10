<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book1.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book1.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book1.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "", edit_user_path(@book1.user), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:'form-control' %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:'btn-success' %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book1.user.id) do %>
              <%= attachment_image_tag current_user, :profile_image, :size, 10, 10, fallback: "no_image.jpg" %>
              <%= @book1.user.name %>
              <% end %>
            </td>
            <td><%= @book1.title %></td>
            <td><%= @book1.body %></td>
            <% if @book1.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book1), class:'btn btn-sm btn-success' %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book1),method: :delete, class:'btn btn-sm btn-danger' %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

